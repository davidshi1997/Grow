<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#feffe2"
    tools:context="com.amazingapps.davidmaisy.grow.GardenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <View
            android:id="@+id/v_seed"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="146dp"
            android:background="@drawable/ic_gardenground6x6" />

        <ImageView
            android:id="@+id/space1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/v_seed"
            android:layout_alignTop="@+id/v_seed"
            android:layout_marginStart="20dp"
            android:layout_marginTop="72dp"
            app:srcCompat="@drawable/ic_phase5" />

        <ImageView
            android:id="@+id/space2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/space1"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/space1"
            app:srcCompat="@drawable/ic_phase3" />

        <ImageView
            android:id="@+id/space3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/space2"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/space2"
            app:srcCompat="@drawable/ic_phase4" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
