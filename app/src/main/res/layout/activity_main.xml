<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#437356"
    tools:context="com.amazingapps.davidmaisy.grow.MainActivity">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="100dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x.xx/x.xx"
        android:layout_toStartOf="@id/water_plant"/>

    <Button
        android:id="@+id/water_plant"
        android:text="@string/water_button"
        android:textSize="15sp"
        android:textColor="#80FFFFFF"
        android:background="@drawable/btn_drink_water"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="52dp"
        android:textAllCaps="false"
        android:layout_toStartOf="@id/add_drink"/>

    <Button
        android:id="@+id/add_drink"
        android:text="+"
        android:textSize="15sp"
        android:textColor="#80FFFFFF"
        android:background="@drawable/btn_add_drink"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"/>
</RelativeLayout>

</android.support.constraint.ConstraintLayout>
